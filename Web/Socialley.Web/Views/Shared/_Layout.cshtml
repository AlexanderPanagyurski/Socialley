@using Socialley.Common
@using Socialley.Data.Models

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" asp-append-version="true" />
    <environment names="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/post-card.css" rel="stylesheet" />
        <script src="https://code.jquery.com/jquery-1.12.4.js" type="text/javascript" asp-append-version="true"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" type="text/javascript" asp-append-version="true"></script>
       
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/post-card.css" rel="stylesheet" />
        <script src="https://code.jquery.com/jquery-1.12.4.js" type="text/javascript" asp-append-version="true"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" type="text/javascript" asp-append-version="true"></script>
    </environment>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (this.SignInManager.IsSignedIn(this.User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="GetAllUsers">All Users</a>
                            </li>
                        }
                        <li class="nav-item pl-4 mt-1">
                            <div class="searchInputWrapper">
                                <form class="form-inline my-2 my-lg-0" asp-controller="Users" asp-action="GetSearchedUsers" method="get">
                                    <input class="searchInput" id="tags" type="text" placeholder='Search' aria-label="Search" name="username" />
                                    <button class="searchInputIcon fa fa-search" type="submit"></button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            <a href="#" id="toTopBtn" class="fas fa-arrow-up" data-abc="true"></a>
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <environment names="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
        <script src="~/lib/moment/min/moment-with-locales.min.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/like-post.js" asp-append-version="true"></script>
        <script src="~/js/posts-gallery.js" asp-append-version="true"></script>
        <script src="~/js/change-avatar.js" asp-append-version="true"></script>
        <script src="~/js/toggle-up-button.js" asp-append-version="true"></script>
        <script src="~/js/show-hide-comments.js" asp-append-version="true"></script>
        <script src="~/js/showAddComment.js" asp-append-version="true"></script>
        <script src="~/js/readmore.js"></script>
        <script src="~/js/username-popover.js" type="text/javascript" asp-append-version="true"></script>
        <script src="https://code.jquery.com/jquery-1.12.4.js" type="text/javascript" asp-append-version="true"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" type="text/javascript" asp-append-version="true"></script>
        <script src="~/js/autocomplete.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/lib/moment/min/moment-with-locales.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/js/like-post.js" asp-append-version="true"></script>
        <script src="~/js/posts-gallery.js" asp-append-version="true"></script>
        <script src="~/js/change-avatar.js" asp-append-version="true"></script>
        <script src="~/js/toggle-up-button.js" asp-append-version="true"></script>
        <script src="~/js/show-hide-comments.js" asp-append-version="true"></script>
        <script src="~/js/showAddComment.js" asp-append-version="true"></script>
        <script src="~/js/readmore.js"></script>
        <script src="~/js/username-popover.js" asp-append-version="true"></script>
        <script src="https://code.jquery.com/jquery-1.12.4.js" type="text/javascript" asp-append-version="true"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" type="text/javascript" asp-append-version="true"></script>
        <script src="~/js/autocomplete.js"></script>
    </environment>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
